@model List<CURD_using_SDSclient.Models.User>


<h2>List Of Users</h2>
<br />
<a href="@Url.Action("Index")" class="btn btn-primary btn-sm">Add New User</a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
           
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <th>
                <a href="@Url.Action("Update", new { id = user.Id })" class="btn btn-success btn-sm" onsubmit="return confirm('Are you sure you want to delete this user?');">Update</a>
            </th>
            <th>
                <form method="post" action="@Url.Action("Delete", new { id = user.Id })" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
            </th>
        </tr>
        }
    </tbody>
</table>